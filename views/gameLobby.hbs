<div class="page-header">
    <h1>
        Lobby: {{lobby.name}}

        <small class="pull-right">
            <a href="/game/lobbies" class="btn btn-default">
                Lobbies
            </a>
            <a href="/game/leave" class="btn btn-danger">
                Leave
            </a>
            {{#if owner}}
            <a href="/game/play/{{ lobby.id }}" class="btn btn-info">
                Start
            </a>
            {{/if}}
        </small>
    </h1>
</div>
<script>
    var LOBBY_ID = "{{lobby.id}}";
</script>

<table class="table table-hover gameLobby">
    <thead>
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            Points
        </th>
    </tr>
    </thead>
    <tbody>
    {{#each players}}
        <tr id="player-{{id}}">
            <td width="1%">
                {{sid}}
            </td>
            <td>
                {{name}}
            </td>
            <td width="1%">
                {{points}}
            </td>
        </tr>
    {{/each}}
    </tbody>
</table>

